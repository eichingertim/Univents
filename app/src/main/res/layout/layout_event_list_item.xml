<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?attr/selectableItemBackground"
    android:padding="2dp">

    <ImageView
        android:id="@+id/img_list_item_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/img_list_item_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_list_item_picture"
        app:layout_constraintTop_toTopOf="@id/img_list_item_picture">

        <TextView
            android:id="@+id/tv_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sommerfest FIM"
            android:textColor="?attr/textColorDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30.08.2019 - 18.00"
            android:textColor="?attr/textColorDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_list_item_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regensburg"
            android:textColor="?attr/textColorDark"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/form_inner_round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>