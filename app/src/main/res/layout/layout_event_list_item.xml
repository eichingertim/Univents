<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="?attr/backgroundColor"
    android:padding="2dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img_list_item_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_list_item_picture"
        app:layout_constraintTop_toTopOf="@id/img_list_item_picture"
        app:layout_constraintBottom_toBottomOf="@id/img_list_item_picture">

        <TextView
            android:id="@+id/tv_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sommerfest FIM"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?attr/textColorDark"/>

        <TextView
            android:id="@+id/tv_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30.08.2019 - 18.00"
            android:textSize="16sp"
            android:textColor="?attr/textColorDark"/>

        <TextView
            android:id="@+id/tv_list_item_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regensburg"
            android:textSize="16sp"
            android:textColor="?attr/textColorDark"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>