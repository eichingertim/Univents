<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_email_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_mail_outline_24dp"
        android:tint="?attr/textColorDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_email_sent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/textColorDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_email_icon"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_check_inbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/textColorDark"
        android:text="@string/check_inbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_sent"
        android:layout_margin="10dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>