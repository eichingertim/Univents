<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_event_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="{update title}"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="?attr/textColorDark"/>

    <TextView
        android:id="@+id/tv_event_update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="{description}"
        android:textSize="14sp"
        android:textColor="?attr/textColorDarkDetails"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_like"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_event_update_likes"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favorite_24dp"/>

        <TextView
            android:id="@+id/tv_event_update_likes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="{likes}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>